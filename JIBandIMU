package newAssignment2;
//https://docs.oracle.com/en/java/javase/12/docs/api/index.html


import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner; 
import java.util.ArrayList; // import the ArrayList class

public class JIBandAccelerometer 
{

	public void setAccel (ArrayList<String> aAccelData)
	{
		int intRowMax = 0; 				//Declare and initialize variable to store the total number of data rows. 
		int intColumnMax = 3; 			//Declare and initialize variable to store the total number of columns.
		int intAccelData [][] = null; 	//Declare and initialize a 2 dimensional array to store the columns and rows of data. 
		int intRow = 0; 				//Declare and initialize a row iterator through the table. 
		int intColumn = 0; 				//Declare and initialize a column iterator through the table. 
		String strAccelDataRow = null;  //Declare and initialize a String variable that holds a row of data from the file. 
		String s = null; 				//Declare and initialize a substring that results in a X,Y, or Z value.
		
		intRowMax= aAccelData.size();  //Assign the total number of data rows. 
		intAccelData = new int [intRowMax][intColumnMax]; //Define the total number of rows and columns in the table array. 
		

		for (intRow=0;intRow<intRowMax;intRow++) //iterate through table of rows. 
		{
		
			int intCutStart = 0; //Defines the start position to cut the number in the String
			int intCutEnd = 2; //Defines the end position to cut the number in the String 
			strAccelDataRow = aAccelData.get(intRow).toString(); 			//get the row of data
			System.out.println(strAccelDataRow);
			for (intColumn=0; intColumn < intColumnMax; intColumn++) //iterate through the columns in the table. 
			{
				s = (String) strAccelDataRow.subSequence(intCutStart, intCutEnd); 	//get next item in the current row
				intAccelData[intRow][intColumn] = Integer.parseInt(s);				//Convert the String to an number. 
				//Based on the format of the data file, define the String cut iterations. 
				intCutStart = intCutStart + 3;										
				intCutEnd = intCutEnd + 3;
				System.out.println(intAccelData[intRow][intColumn]);
			}	
		}
	}
	public ArrayList<String> getAccel() throws FileNotFoundException
	{
	    File fleJIBandAccelFile = null;  //declare and initialize File object
	    Scanner sc = null; //declare and initialize Scanner object
	    ArrayList<String> arlAccelData = null; //declare and initialize array to store values from the file. 

	   	   
	    fleJIBandAccelFile = new File ("/Users/NiiArmah/JET_Training/JIBandSample_Dataset_Accelerometer.txt"); //instantiate File object passing filepath
	    arlAccelData= new ArrayList<String>(); //instantiate a new ArrayList object to store each row of the file. 
	    
	    try 
	    {
			sc = new Scanner (fleJIBandAccelFile); //Instantiate scanner object passing in the file object
		    while (sc.hasNextLine()) //Loop through the file until there are no more lines left in the file. 
		    {
		    	arlAccelData.add(sc.nextLine()); //Add the next line of the file to the scanner object.   
		    }
		   
	    } 
	    
	    catch (FileNotFoundException e) 
	    {
			e.printStackTrace();
		}
	    System.out.println(arlAccelData);
    	
	    String s = arlAccelData.get(0).toString();
    	System.out.println(s);
    	System.out.println(s.subSequence(0, 2));  
    	String s1 = (String) s.subSequence(0, 2); 
    	String s2 = (String) s.subSequence(3, 5); 
    	String s3 = (String)s.subSequence(6, 8);
    	int[][] i = null;
    	i = new int [1][3];
    	i[0][0] = Integer.parseInt(s1);
    	i[0][1] = Integer.parseInt(s2);
    	i[0][2] = Integer.parseInt(s3); 	
	    System.out.println(i[0][0] + " " + i[0][1] + " " + i[0][2]);
    	
	    
		    return arlAccelData; //Return an ArrayList that is populated with data from the file. 
	}

	 
	  public static void main(String[] args) throws Exception 
	  { 
		  ArrayList<String> arlData = null;						//Create an ArrayList
		  JIBandAccelerometer j = new JIBandAccelerometer (); 	//Instantiate the JIBand Accelerometer
		  arlData = j.getAccel();								//Get Accelerometer data from the file. 
		  j.setAccel(arlData);									//Set the Accelerometer data to a multi-dimensional array. 
	  } 
	} 

